@startuml
class InventoryManager
{
    start()
    main()
}

class mainWindowController
{
    + addItemButtonClicked()
    + loaddButtonClicked()
    + saveAsTSVButtonClicked()
    + saveAsHTMLButtonClicked()
    + saveAsJSONButtonClicked()
    + sortByNameButtonClicked()
    + sortByValueClicked()
    + sortBySerialNumClicked()
    + searchByNameClicked()
    + searchByValueClicked()

    - addItem()
    - loadInventoryFile()
    - loadTSV()
    - loadHTML()
    - loadJSON()
    - saveTSV()
    - saveHTML()
    - saveJSON()
    - sortByName()
    - sortByValue()
    - sortBySerialNumber()
    - searchByName()
    - searchBySerialNum()
}

class inventoryItem
{
    dollarVal : String
    serialNum : String
    name : String

    + getName() : String
    + getSerialNum() : String
    + getDollarVal() : double

    + setDollarVal()
    + setName()
    + setSerialNum()

    - hasInvalidCharacter(String) : boolean
}

class SceneManager
{
    load()
    getScene(String) : Scene
}


openjfx.org.Application <|-- InventoryManager
InventoryManager -- SceneManager
SceneManager -- mainWindowController
mainWindowController -- inventoryItem
@enduml